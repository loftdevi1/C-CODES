#include <conio.h>
#include <stdio.h>
#include <stdlib.h>

void abhi(int*,int*);
void main()
{
int num1,num2;
clrscr();

printf("\nENTER TWO NUMBERS=");
scanf("%d%d",&num1,&num2);

abhi(&num1,&num2);

getch();
}


void abhi(int*x,int*y)
{
int sum,sub,mul,div;

sum=*x+*y;
sub=*x-*y;
mul=*x**y;
div=(*x)/(*y);

printf("\nsum=%d",sum);
printf("\nsubtraction=%d",sub);
printf("\nmultiplication=%d",mul);
printf("\ndivision=%d",div);

}
